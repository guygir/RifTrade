# Supabase Configuration
# Copy this file to .env.local and fill in your actual values
# Get these from: https://supabase.com/dashboard/project/YOUR_PROJECT_ID/settings/api

NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Optional: For server-side operations (if needed later)
# SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Meta Data Configuration (Popular Decks & Cards Feature)
# Enable/disable automatic meta data updates
META_UPDATE_ENABLED=true

# How long to cache meta data before refreshing (in hours)
META_CACHE_DURATION_HOURS=24

# Secret key for authenticating cron job requests
# Generate a secure random string for production (e.g., using: openssl rand -base64 32)
CRON_SECRET=your_secure_random_string_here
